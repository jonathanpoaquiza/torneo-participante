<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2_app"
    tools:context=".ParticipanteListView">

    <ListView
        android:id="@+id/lv_participantes"
        android:layout_width="350dp"
        android:layout_height="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="PARTICIPANTES"
        android:textAllCaps="true"
        android:textColor="#D72A2A"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="@+id/lv_participantes"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/lv_participantes" />

    <Button
        android:id="@+id/btn_anadir_participante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/lv_participantes"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/lv_participantes"
        app:layout_constraintTop_toBottomOf="@+id/lv_participantes" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="ID - Participante - Estado - Fecha Nacimiento - Ranking"
        app:layout_constraintBottom_toTopOf="@+id/lv_participantes"
        app:layout_constraintEnd_toEndOf="@+id/lv_participantes"
        app:layout_constraintStart_toStartOf="@+id/lv_participantes" />
</androidx.constraintlayout.widget.ConstraintLayout>