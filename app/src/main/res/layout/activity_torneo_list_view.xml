<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2_app"
    tools:context=".TorneoListView">

    <ListView
        android:id="@+id/lv_torneos"
        android:layout_width="345dp"
        android:layout_height="422dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="TORNEOS"
        android:textAllCaps="true"
        android:textColor="#D91D1D"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/lv_torneos"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/lv_torneos" />

    <Button
        android:id="@+id/btn_anadir_torneo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/lv_torneos"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/lv_torneos"
        app:layout_constraintTop_toBottomOf="@+id/lv_torneos" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="ID - Torneo - Estado - Fecha Inicio - InscripciÃ³n"
        app:layout_constraintBottom_toTopOf="@+id/lv_torneos"
        app:layout_constraintEnd_toEndOf="@+id/lv_torneos"
        app:layout_constraintStart_toStartOf="@+id/lv_torneos" />
</androidx.constraintlayout.widget.ConstraintLayout>